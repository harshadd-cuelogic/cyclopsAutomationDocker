USER root
RUN mkdir -p /home/automationFramework
#COPY pom.xml pom.xml
#COPY src src
#COPY Feature Feature 
WORKDIR /home/automationFramework/
RUN apt-get update
RUN yes | apt-get install iputils-ping
RUN yes | apt-get install git
